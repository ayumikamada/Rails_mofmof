<p id="notice"><%= notice %></p>

<h1>閲覧</h1>

<p>
  <strong>物件名:</strong>
  <%= @property.property_name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @property.rent %>円
</p>

<p>
  <strong>住所:</strong>
  <%= @property.address %>
</p>

<p>
  <strong>築年数:</strong>
  <%= @property.age %>年
</p>

<p>
  <strong>備考:</strong>
  <%= @property.remarks %>
</p>

<p class="line"></p>

<% @nearest_stations.each_with_index do |nearest_station, i|%>

<p>
  <strong>最寄駅<%= i + 1 %></strong>
</p>

<p>
  <strong>路線名:</strong>
  <%= nearest_station.route %>線
</p>

<p>
  <strong>駅名:</strong>
  <%= nearest_station.station %>駅
</p>

<p>
  <strong>徒歩分数:</strong>
  <%= nearest_station.minnutes_walk %>分
</p>
<% end %>

<%= link_to '編集', edit_property_path(@property) %> |
